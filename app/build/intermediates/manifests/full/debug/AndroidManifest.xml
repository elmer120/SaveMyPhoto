<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.pedrazzi.marco.savemyphoto"
    android:versionCode="1"
    android:versionName="0.8.3" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="23" />

    <!-- Permessi -->


    <!-- per connessione -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- per recupero media -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- per connetersi al server -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
        android:largeHeap="true"

        <!-- Scelta accesso -->
        <activity
            android:name="it.pedrazzi.marco.savemyphoto.Activity.ChooseAccessActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name="it.pedrazzi.marco.savemyphoto.Activity.AccediActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" />

        <!-- Registrazione -->
        <activity
            android:name="it.pedrazzi.marco.savemyphoto.Activity.RegistrazioneActivity"
            android:label="@string/registrati"
            android:theme="@style/AppTheme" />

        <!-- SearchViewActivity -->
        <activity android:name="it.pedrazzi.marco.savemyphoto.Activity.SearchViewActivity" />

        <!-- Presentazione -->
        <activity android:name="it.pedrazzi.marco.savemyphoto.Activity.PresentazioneActivity" />
        <activity
            android:name="com.karumi.dexter.DexterActivity"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Transparent" />
    </application>

</manifest>