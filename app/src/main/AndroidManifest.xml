<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.pedrazzi.marco.savemyphoto">

    <!-- Permessi -->


    <!-- per mac wifi -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- per recupero media -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- per connetersi al server -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">

        <!-- service per sincronizzare i media -->
        <service android:name=".http.testService" />

        <!-- Scelta accesso -->


        <!-- Login -->
        <activity
            android:name=".AccediActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" />

        <!-- SearchView -->
        <activity android:name=".SearchView" />
        <activity
            android:name=".ChooseAccessActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_choose_access"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegistrazioneActivity"></activity>
    </application>

</manifest>